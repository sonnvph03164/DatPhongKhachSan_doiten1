<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_no_favs"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:visibility="gone"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/height_nofavs_badge"
            android:layout_height="@dimen/height_nofavs_badge"
            android:src="@drawable/badge_no_favs_final"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="@string/title_no_favs"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center_vertical|center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="@string/desc_no_favs"
        android:gravity="center_vertical|center_horizontal" />




</LinearLayout>